<p><%= link_to "新規映画を登録する", action: "new" %></p>
<table>
<% @movies.each do |movie| %>
    <h3><%= movie.name %></h3>
    <li><%= movie.year %></li>
    <li><%= movie.description %></li>
    <li><%= movie.image_url %></li>
    <%= link_to "この映画の詳細を見る", admin_movie_path(movie) %>
    <br>
    <%= link_to "この映画の情報を修正する", edit_admin_movie_path(movie) %>
    <br>
    <%= button_to 'この映画の情報を削除する', admin_movie_path(movie), method: :delete, form: { data: { turbo_confirm: "削除しますか？" }} %>
  <% end %>
</table>
<br>